<?xml version="1.0" encoding="UTF-8"?>
<beans	xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:mvc="http://www.springframework.org/schema/mvc"
		xsi:schemaLocation="http://www.springframework.org/schema/mvc 
							http://www.springframework.org/schema/mvc/spring-mvc-4.1.xsd
							http://www.springframework.org/schema/beans
							http://www.springframework.org/schema/beans/spring-beans.xsd">

	<mvc:annotation-driven />

	<!-- resources location -->
	<mvc:resources 	location="/WEB-INF/static/js/" 
					mapping="/js/**" />
	<mvc:resources 	location="/WEB-INF/static/css/" 
					mapping="/css/**" />
	<mvc:resources 	location="/WEB-INF/static/image/" 
					mapping="/image/**" />
	
	<!-- viewResolver -->
	
	<bean	id="viewResolver"
			class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/view/" />
		<property name="suffix" value=".jsp" />
	</bean>

	<!-- viewController -->
	
	<bean	id="boardController"
			class="com.ktds.christof_kim.bbs.web.BoardController">	
		<property	name="boardService"
					ref="boardService"/>
	</bean>
	
	<!-- Exception Controller -->
	
	<bean	id="exceptionController"
			class="com.ktds.christof_kim.exception.ExceptionController"/>
	
</beans>