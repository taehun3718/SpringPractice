<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
				"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
				
<mapper namespace="boardDAO">
	
	<select id="sample">
		SELECT	SYSDATE
		FROM	DUAL
	</select>
	
	<insert id="insertBoard" parameterType="BoardVO">
		INSERT INTO BOARD (
			ID
			,SUBJECT
			,CONTENT
			,UPLOAD_FILE) 
		VALUES ( 
			BOARD_IDX_SEQ.NEXTVAL
			,#{subject}
			,#{content}
			,#{uploadFile}
		)
	</insert>
	
	<resultMap type="BoardVO" id="getAllBoardListMap">
		<result property="id"		column="ID"/>
		<result property="subject"	column="SUBJECT"/>
	</resultMap>
	
	<select id="getAllBoardList" 
			parameterType="map"
			resultMap="getAllBoardListMap">
			SELECT	ID
				,SUBJECT
			FROM	BOARD
	</select>
	
	<select	id="getDetailBoardById"
			parameterType="string"
			resultType="BoardVO">
			
			SELECT	ID
				,SUBJECT
				,CONTENT
				,UPLOAD_FILE
			FROM	BOARD
			WHERE ID = #{boardId}
			
	</select>
	
	<update id="updateBoardById" parameterType="BoardVO">
		UPDATE	BOARD
		SET		SUBJECT = #{subject}
				,CONTENT= #{content}
		WHERE	ID = #{id}
	</update>
	
</mapper>